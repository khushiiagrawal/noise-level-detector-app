<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="24dp">

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="MyNoiseDetector"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- dB value -->
    <TextView
        android:id="@+id/dbValueTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dB: 0"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/titleTv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Noise label -->
    <TextView
        android:id="@+id/labelTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/dbValueTv"
        app:layout_constraintStart_toEndOf="@+id/dbValueTv"
        android:layout_marginStart="16dp"/>

    <!-- Colored circle -->
    <View
        android:id="@+id/coloredCircle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/circle_bg"
        app:layout_constraintTop_toBottomOf="@+id/dbValueTv"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Horizontal meter -->
    <ProgressBar
        android:id="@+id/meter"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:max="120"
        android:progress="0"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toEndOf="@+id/coloredCircle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/coloredCircle"/>

    <!-- Start/Stop toggle -->
    <Button
        android:id="@+id/startStopBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start"
        app:layout_constraintTop_toBottomOf="@+id/coloredCircle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Threshold controls -->
    <TextView
        android:id="@+id/thresholdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alert threshold: 70 dB"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/startStopBtn"
        app:layout_constraintStart_toStartOf="parent"/>

    <SeekBar
        android:id="@+id/thresholdSeekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="120"
        android:progress="70"
        app:layout_constraintStart_toStartOf="@+id/thresholdLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thresholdLabel"
        android:layout_marginTop="8dp"/>

    <!-- small help -->
    <TextView
        android:id="@+id/helpTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tip: Allow microphone permission when prompted."
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
